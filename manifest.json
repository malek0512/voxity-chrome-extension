{
  "manifest_version": 2,

  "name": "Voxity Click-to-call",
  "description": "Allow you to click on any phonenumber contained in a web page to launch a call using your Voxity telephony system.",
  "version": "1.1",
  "author": "MaÃ«l Lavault",
  "icons": {
    "16": "icon16.png",
    "32": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": { 
    "scripts": ["index.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["gator.min.js", "mutation-summary.js", "parseNumbers.js"],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "33.0",
  "offline_enabled": false,
  "permissions": [
    "identity",
    "storage",
    "https://api.voxity.fr/api/*"
  ]
}