{
  "manifest_version": 2,
  "name": "Voxity Click-to-call",
  "description": "Allow you to click on any phonenumber contained in a web page to launch a call using your Voxity telephony system.",
  "version": "1.6",
  "author": ["MaÃ«l Lavault", "Loic Chabert", "Malek Mammar"],
  "icons": {
    "16": "icon16.png",
    "32": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "background": { 
    "scripts": ["socket.io-1.3.5.js", "socket.js", "index.js"],
    "persistent": false
  },
  "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true
    // Not recommended; only provided for backwards compatibility,
    // and will be unsupported in a future version of Chrome (TBD).
    //"open_in_tab": true
  },
  "minimum_chrome_version": "29.0",
  "offline_enabled": false,
  "permissions": [
    "webNavigation",
    "identity",
    "storage",
    "notifications",
    "contextMenus",
    "sessions",
    "https://api.voxity.fr/api/*"
  ],
  "browser_action": {
    "default_icon": "icon16.png"
  }
}
